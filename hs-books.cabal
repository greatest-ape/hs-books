name:                hs-books
version:             0.1.0.0
synopsis:            CGI app for displaying a HTML list of .epub books in a directory
description:         Please see README.md
homepage:            https://github.com/githubuser/hs-books#readme
license:             BSD3
license-file:        LICENSE
author:              Joakim Frostegård
maintainer:          joakim.frostegard@gmail.com
copyright:           2017 Joakim Frostegård
category:            Web
build-type:          Simple
cabal-version:       >=1.10
extra-source-files:  README.md

executable hs-books
  hs-source-dirs:      src
  main-is:             Main.hs
  default-language:    Haskell2010
  build-depends:       aeson
                     , base >= 4.7 && < 5
                     , bytestring
                     , cgi
                     , cryptohash
                     , directory
                     , epub-metadata
                     , gd
                     , mtl
                     , split
                     , tagsoup
                     , text
                     , zip-archive
